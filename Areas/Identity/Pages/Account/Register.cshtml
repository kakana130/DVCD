@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <style>
        .centered-button {
            display: block;
            margin: 0 auto; /* จัดกลางปุ่ม */
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
        }

            .centered-button:hover {
                background-color: #0056b3; /* เปลี่ยนสีเมื่อ hover */
            }
    </style>
</head>

<div style="display: flex; flex-direction: column; align-items: center;">
    <br>
    <h3>@ViewData["Title"]</h3>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <table>
            <tr>
                <p>
                <td>FirstName</td>
                <td>
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form" autocomplete="firstname" aria-required="true" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </td>
                </p>
            </tr>
            <tr>
                <p>
                <td>LastName</td>
                <td>
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form" autocomplete="lastname" aria-required="true" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </td>
                </p>    
            </tr>
            <tr>
                <p>
                <td>Mobile Phone</td>
                <td>
                    <div class="form-floating">
                        <input asp-for="Input.MobilePhone" class="form" autocomplete="mobilephone" aria-required="true" />
                        <span asp-validation-for="Input.MobilePhone" class="text-danger"></span>
                    </div>
                </td>
                </p>
            </tr>
            <tr>
                <p>
                <td>Username</td>
                <td>
                   
                    <div class="form-floating">
                        <input asp-for="Input.UserName" class="form" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    
                </td>
                </p>
            </tr>
            <tr>
                <p>
                <td>Password</td>
                <td>

                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                </td>
                </p>
            </tr>
            <tr>
                <p>
                <td>ConfirmPassword </td>
                <td>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </td>
                </p>
            </tr>
            <tr>
                <td colspan="2">
                    <br>
                    <button id="registerSubmit" type="submit" class="centered-button btn btn-primary">Register</button><br>  
                </td>
            </tr>   
        </table>
    </form>
    <div align="center">
        <p>or</p>
        <button type="button" onclick="window.location.href='/Identity/Account/Login'" class="centered-button btn btn-primary">Login</button>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
