@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <style>
        .centered-button {
            display: block;
            margin: 0 auto; /* จัดกลางปุ่ม */
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
        }

        .centered-button:hover {
            background-color: #0056b3; /* เปลี่ยนสีเมื่อ hover */
        }
    </style>
</head>

<div align="center">
<br>
<h3>@ViewData["Title"]</h3>
<br>

    <form id="account" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <table>
            <tr>
                <td>Username</td>
                <td>
                    <br>
                    <div class="form-floating">
                        <input asp-for="Input.UserName" class="form" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <br>
                </td>
            </tr>
            <tr>
                <td>Password</td>
                <td>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <br>
                    <p>
                        <button id="login-submit" type="submit" class="centered-button btn btn-primary">Log in</button>
                    </p>
                </td>
            </tr>
        </table>
    </form>
    <div align="center">
        <p>or</p>
            <button type="button" onclick="window.location.href='/Identity/Account/Register'" class="centered-button btn btn-primary">Register</button>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}